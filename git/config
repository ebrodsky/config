#[url "ssh://git@github.com/"]
#	insteadOf = https://github.com/
[user]
	email = eytanbrodsky@gmail.com
	name = Eytan Brodsky
[column]
    ui = auto
[branch]
    sort = -committerdate
[init]
    defaultBranch = main
[diff]
    algorithm = histogram
    colorMoved = plain
    mnemonicPrefix = true
    renames = true
[push]
    default = simple
    autoSetupRemote = true
    followTags = true
[fetch]
    prune = true
    pruneTags = true
    all = true

[commit]
    verbose = true
[rerere]
    enabled = true
    autoupdate = true
[merge]
    tool = nvim
    conflictstyle = zdiff3
[mergetool "nvim"]
    cmd = nvim-wrapper -f -c \"Gdiffsplit!\" \"$MERGED\"
[mergetool]
    prompt = false

[core]
    fileMode = false
    excludesfile = ~/.gitexcludes
    excludesfile = ~/.gitignore
    editor = nvim
[color]
    ui = true
[format]
    pretty = oneline
[alias]
	co = checkout
	s = status
	d = diff
	cm = commit -m
	ca = commit -am
	pl = pull
	pu = push
	a = add
	l = log --oneline -n20
	aa = commit --amend
	sb = show-branch
	subdate = !git submodule update --init --recursive
	mote = !git fetch --all && git show-branch $(git rev-parse --abbrev-ref HEAD) origin/$(git rev-parse --abbrev-ref HEAD)
    lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit

[pull]
	rebase = true
